
<p><b>Name:</b> <%= @app.name %></p>
<p><b>Address:</b> <%= @app.address %></p>
<p><b>City:</b> <%= @app.city %></p>
<p><b>State:</b> <%= @app.state %></p>
<p><b>Zip:</b> <%= @app.zip %></p>
<p><b>Phone:</b> <%= @app.phone %></p>
<p><b>Description:</b> <%= @app.description %></p>

<p><b>Pet(s):</b></p>
<% @app.pets.each do |pet|%>
    <div class="pets-<%=pet.id %>">
<%= link_to "#{pet.name}", "/pets/#{pet.id}" %> <br/>
<%= link_to "Approve Application", "/pets/#{pet.id}/change_status", method: :patch %>
</div>
<%end%>