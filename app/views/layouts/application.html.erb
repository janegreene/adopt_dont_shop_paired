<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="navbar">
      <center>Adopt Don't Shop
      <%= link_to "All Pets", "/pets" %>
      <%= link_to "All Shelters", "/shelters" %>
      <p>Favorite Pets: <%= favorite.total_count %></p>

    </div>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
